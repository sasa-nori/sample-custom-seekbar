<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>

        <shape android:shape="oval" >
            <gradient
                android:angle="270"
                android:endColor="#3D000000"
                android:gradientRadius="24dp"
                android:startColor="@color/white"
                android:type="radial" />

            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="oval">
            <solid android:color="@color/white" />

        </shape>

    </item>

</layer-list>